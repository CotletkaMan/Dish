<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .header {
            position: relative;
            background-color: forestgreen;
            z-index: 5;
            min-height: 20px;
            padding: 20px;
            width: 100%;
            text-align: center;
        }
        .centerContent{
            margin: auto;
            padding: 5px;
        }
    </ui:style>
    <g:SimplePanel addStyleNames="{style.header}">
        <g:FlowPanel ui:field="panel" addStyleNames="{style.centerContent}">
        </g:FlowPanel>
    </g:SimplePanel>
</ui:UiBinder>