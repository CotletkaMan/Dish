<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:VerticalPanel>
        <g:TextBox ui:field="name">Name</g:TextBox>
        <g:ListBox ui:field="type">
            <g:item>
                FIRST
            </g:item>
            <g:item>
                SECOND
            </g:item>
            <g:item>
                DESERT
            </g:item>
        </g:ListBox>
        <g:HorizontalPanel>
            <g:ListBox ui:field="ingredient">
                <g:item>
                    TOMATO
                </g:item>
                <g:item>
                    CARROT
                </g:item>
            </g:ListBox>
            <g:TextBox ui:field="count">count</g:TextBox>
        </g:HorizontalPanel>
        <g:TextBox ui:field="recipe">Recipe</g:TextBox>
        <g:Button ui:field="sendButton">Send</g:Button>
    </g:VerticalPanel>
</ui:UiBinder>